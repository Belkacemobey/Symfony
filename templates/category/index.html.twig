{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
    <h1>Liste des Catégories</h1>
    
    <a href="{{ path('add_category') }}" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Ajouter une catégorie
    </a>
    
    {% if categories is empty %}
        <div class="alert alert-info">
            Aucune catégorie trouvée. Ajoutez-en une !
        </div>
    {% else %}
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Nombre de meubles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td><strong>{{ category.nomCategory }}</strong></td>
                        <td>
                            <span class="badge bg-primary">{{ category.meubles|length }}</span>
                        </td>
                        <td>
                            <a href="{{ path('category_show', {'id': category.id}) }}" 
                               class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}