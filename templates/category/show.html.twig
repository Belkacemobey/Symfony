{% extends 'base.html.twig' %}

{% block title %}Catégorie: {{ category.nomCategory }}{% endblock %}

{% block body %}
    <h1>Catégorie: {{ category.nomCategory }}</h1>
    
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Détails de la catégorie</h5>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> {{ category.id }}</p>
            <p><strong>Nom:</strong> {{ category.nomCategory }}</p>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="card-title mb-0">
                Meubles dans cette catégorie 
                <span class="badge bg-light text-dark">{{ category.meubles|length }}</span>
            </h5>
        </div>
        <div class="card-body">
            {% if category.meubles|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prix</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for meuble in category.meubles %}
                                <tr>
                                    <td>{{ meuble.nomM }}</td>
                                    <td>{{ meuble.prix }} TND</td>
                                    <td>{{ meuble.sinceAt|date('d/m/Y') }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-warning">
                    Aucun meuble dans cette catégorie.
                </div>
            {% endif %}
        </div>
    </div>
    
    <div class="mt-3">
        <a href="{{ path('app_category') }}" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
{% endblock %}