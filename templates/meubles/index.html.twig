{% extends 'base.html.twig' %}

{% block title %}Liste des Meubles{% endblock %}

{% block body %}
    <h1>Liste des Meubles</h1>
    
    <div class="mb-3 d-flex gap-2">
        <a href="{{ path('add_meuble') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Ajouter un meuble
        </a>
        <a href="{{ path('app_meubles_edit_all') }}" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Modifier tous les meubles
        </a>
    </div>
    
    {% if meubles is empty %}
        <div class="alert alert-info">
            Aucun meuble trouvé. Ajoutez-en un !
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Date</th>
                        <th>Catégorie</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for meuble in meubles %}
                        <tr>
                            <td>{{ meuble.id }}</td>
                            <td><strong>{{ meuble.nomM }}</strong></td>
                            <td>{{ meuble.prix }} TND</td>
                            <td>{{ meuble.sinceAt|date('d/m/Y') }}</td>
                            <td>
                                <span class="badge bg-info">{{ meuble.category.nomCategory }}</span>
                            </td>
                            <td>
                                {% if meuble.image %}
                                    {# Affiche l'image depuis public/uploads/images/ #}
                                    <img src="{{ asset('uploads/images/' ~ meuble.image) }}" 
                                         alt="{{ meuble.nomM }}" 
                                         class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                                {% else %}
                                    <span class="text-muted">Pas d'image</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('edit_meuble', {'id': meuble.id}) }}" 
                                       class="btn btn-warning">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <a href="{{ path('meuble_delete', {'id': meuble.id}) }}" 
                                       class="btn btn-danger"
                                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce meuble ?')">
                                        <i class="bi bi-trash"></i> Supprimer
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
